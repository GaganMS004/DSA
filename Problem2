# left rotate by d

def left_rotate_by_d(arr, d):
    d = d % len(arr)   # Handle cases where d > length
    if d == 0:
        return arr
    
    temp = arr[:d]              # Store first d elements
    arr[:len(arr)-d] = arr[d:]  # Shift remaining elements left
    arr[len(arr)-d:] = temp     # Place temp at the end
    
    return arr


arr = [2, 4, 6, 5, 1]
d = int(input("Enter the value of D: "))
left_rotate_by_d(arr, d)

print(*arr)


# right rotate by d

def right_rotate_by_d(arr, d):
    d = d % len(arr)
    if d == 0:
        return arr
    
    temp = arr[-d:]         # Store last d elements
    arr[d:] = arr[:-d]      # Shift elements right
    arr[:d] = temp          # Move temp to front
    
    return arr


arr = [2, 4, 6, 5, 1]
d = int(input("Enter the value of D: "))
right_rotate_by_d(arr, d)

print(*arr)
